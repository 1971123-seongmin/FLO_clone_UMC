<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_pannel_background_iv"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_first_album_default"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_pannel_btn_nvgn_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticker_iv"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/btn_main_mike" />
            <ImageView
                android:id="@+id/home_pannel_btn_ticker_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"
                android:src="@drawable/btn_main_ticket" />
            <ImageView
                android:id="@+id/home_pannel_btn_setting_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/btn_main_setting" />

            <TextView
                android:id="@+id/home_pannel_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포근하게 덮어주는 꿈의\n목소리"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_pannel_btn_nvgn_iv"
                />

            <ImageView
                android:id="@+id/home_pannel_btn_play_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_panel_play_large"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_pannel_title_tv"
                />

            <ImageView
                android:id="@+id/home_pannel_album_img_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_album_exp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/home_pannel_background_iv"
                />

            <TextView
                android:id="@+id/home_pannel_album_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="총 15곡 2019.11.11"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@+id/home_pannel_album_img_iv2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_pannel_album_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잠이 안온다"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
                app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"
                />

            <TextView
                android:id="@+id/home_pannel_album_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="젠(zen)"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
                app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"
                />

            <ImageView
                android:id="@+id/home_pannel_album_img_iv2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/img_album_exp"
                app:layout_constraintBottom_toTopOf="@+id/home_pannel_album_img_iv"
                app:layout_constraintStart_toStartOf="parent" />"
                />

            <TextView
                android:id="@+id/home_pannel_album_title_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잠이 안온다"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/home_pannel_album_img_iv2"
                app:layout_constraintTop_toTopOf="@+id/home_pannel_album_img_iv2" />

            <TextView
                android:id="@+id/home_pannel_album_singer_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="젠(zen)"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/home_pannel_album_img_iv2"
                app:layout_constraintTop_toBottomOf="@+id/home_pannel_album_title_tv2" />

            <TextView
                android:id="@+id/home_panel_today_release_music_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="오늘 발매 음악"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/home_pannel_album_img_iv"
                app:layout_constraintTop_toBottomOf="@+id/home_pannel_background_iv" />

            <ImageButton
                android:id="@+id/detail_btn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_main_arrow_more"
                app:layout_constraintBottom_toBottomOf="@id/home_panel_today_release_music_tv"
                app:layout_constraintStart_toEndOf="@id/home_panel_today_release_music_tv"
                app:layout_constraintTop_toTopOf="@+id/home_panel_today_release_music_tv" />

            <TextView
                android:id="@+id/foreign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해외"
                android:textColor="#A9A9A9"
                app:layout_constraintTop_toTopOf="@id/home_panel_today_release_music_tv"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/domestic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국내"
                android:layout_marginEnd="20dp"
                android:textColor="#A9A9A9"
                app:layout_constraintEnd_toStartOf="@id/foreign_tv"
                app:layout_constraintTop_toTopOf="@id/foreign_tv"/>

            <TextView
                android:id="@+id/synthetic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종합"
                android:layout_marginEnd="20dp"
                android:textColor="#0000FF"
                app:layout_constraintEnd_toStartOf="@id/domestic_tv"
                app:layout_constraintTop_toTopOf="@id/domestic_tv"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_panel_today_release_music_tv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_list"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:fadeScrollbars="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/home_panel_today_release_music_tv">

                            <ImageView
                                android:id="@+id/album_iv_img1"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:src="@drawable/lilac_album_cover"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="20dp"
                                app:layout_constraintTop_toTopOf="@id/constraint_list"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/tv_album_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LILAC"
                                android:textSize="20sp"
                                app:layout_constraintStart_toStartOf="@+id/album_iv_img1"
                                app:layout_constraintTop_toBottomOf="@id/album_iv_img1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="아이유 (IU)"
                                android:textColor="#A9A9A9"
                                app:layout_constraintStart_toStartOf="@id/tv_album_name1"
                                app:layout_constraintTop_toBottomOf="@id/tv_album_name1"/>

                        <ImageView
                            android:id="@+id/album_iv_img2"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/lilac_album_cover"
                            android:layout_marginStart="20dp"
                            app:layout_constraintTop_toTopOf="@id/album_iv_img1"
                            app:layout_constraintStart_toEndOf="@+id/album_iv_img1" />

                        <TextView
                            android:id="@+id/tv_album_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LILAC"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="@+id/album_iv_img2"
                            app:layout_constraintTop_toBottomOf="@id/album_iv_img2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이유 (IU)"
                            android:textColor="#A9A9A9"
                            app:layout_constraintStart_toStartOf="@id/tv_album_name2"
                            app:layout_constraintTop_toBottomOf="@id/tv_album_name2"/>

                        <ImageView
                            android:id="@+id/album_iv_img3"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/lilac_album_cover"
                            android:layout_marginStart="20dp"
                            app:layout_constraintTop_toTopOf="@id/album_iv_img2"
                            app:layout_constraintStart_toEndOf="@+id/album_iv_img2" />

                        <TextView
                            android:id="@+id/tv_album_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LILAC"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="@+id/album_iv_img3"
                            app:layout_constraintTop_toBottomOf="@id/album_iv_img3"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이유 (IU)"
                            android:textColor="#A9A9A9"
                            app:layout_constraintStart_toStartOf="@id/tv_album_name3"
                            app:layout_constraintTop_toBottomOf="@id/tv_album_name3"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
